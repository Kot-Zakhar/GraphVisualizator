unit UnitTypeAndConst;

interface

uses Vcl.Graphics;

const
   NameLength = 20;

type
   TIndex = Word;
   TAmount = TIndex;
   TEdgeValue = Integer;
   TName = String[NameLength];
   TDirection = (DBidirectional, DUnidirectional);

   TShape = (ShCircle, ShSquare, ShTriangle, ShStar);
   TArrowSettings = record
      HalfAngle: Extended;
      Length: Byte;
   end;

   TCustomFont = record
      Name: TFontName;
      Size: Integer;
      Color: TColor;
      CharSet: TFontCharset;
   end;

   TVisualSettings = record
      Vertex: record
         Active, Common: record
            Line: record
               Width: Byte;
               Color: TColor;
            end;
            FillColor: TColor;
         end;
         TextFont: TCustomFont;
         Size: Word;
         Shape: TShape;
      end;
      Edge: Record
         Active, Common: record
            Width: Byte;
            Color: TColor;
         end;
         TextFont: TCustomFont;
         ArrowSettings: TArrowSettings;
      end;
   end;

const
   DefaultFont: TCustomFont = (
      Name: 'Tahoma';
      Size: 8;
      Color: clWindowText;
      CharSet: 0;
   );

   DefaultVisualSettings: TVisualSettings = (
      Vertex: (
         Active: (
            Line: (
               Width: 5;
               Color: clBlack;
            );
            FillColor: clRed;
         );
         Common: (
            Line: (
               Width: 3;
               Color: clBlack;
            );
            FillColor: ClBlue;
         );
         Size: 10;
         Shape: ShCircle;
      );
      Edge: (
         Active: (
            Width: 3;
            Color: clRed;
         );
         Common: (
            Width: 1;
            Color: clBlue;
         );
         ArrowSettings: (
            HalfAngle: 0.3;
            Length: 5;
         );
      );
   );

implementation


end.
