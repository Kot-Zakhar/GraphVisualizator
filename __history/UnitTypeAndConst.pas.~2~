unit UnitTypeAndConst;

interface

uses Vcl.Graphics;

const
   NameLength = 20;

type
   TIndex = Word;
   TAmount = TIndex;
   TEdgeValue = Integer;
   TName = String[NameLength];
   TDirection = (DBidirectional, DUnidirectional);

   TShape = (ShCircle, ShSquare, ShTriangle, ShStar);
   TArrowSettings = record
      HalfAngle: Extended;
      Length: Byte;
   end;

   TCustomFont = record
      Name: TFontName;
      Size: Integer;
      Color: TColor;
      CharSet: TFontCharset;
   end;

   TVisualSettings = record
      Vertex: record
         Active, Common: record
            Line: record
               Width: Byte;
               Color: TColor;
            end;
            FillColor: TColor;
         end;
         TextFont: TCustomFont;
         Size: Word;
         Shape: TShape;
      end;
      Edge: Record
         Active, Common: record
            Width: Byte;
            Color: TColor;
         end;
         TextFont: TCustomFont;
         ArrowSettings: TArrowSettings;
      end;
   end;

const
   DefaultFont: TCustomFont = (
      Name: 'Tahoma';
      Size: 8;
      Color: clWindowText;
      CharSet: 0;
   );

implementation


end.
